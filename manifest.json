{
    "manifest_version": 3,
    "name": "Claude: Continue from Here",
    "version": "1.0.2",
    "icons": {
      "16": "assets/Claude Continue from Here - 16.png",
      "32": "assets/Claude Continue from Here - 32.png",
      "64": "assets/Claude Continue from Here - 64.png",
      "128": "assets/Claude Continue from Here - 128.png",
      "830": "assets/Claude Continue from Here - 830.png"
    },
    "description": "Easily start a new Claude chat from any message, complete with all chat history and files up to that point!",
    "content_scripts": [{
      "matches": ["https://claude.ai/chat/*"],
      "js": ["content.js", "turndown.js"],
      "css": ["styles.css"]
    }]
  }